public class Main {
    public static void main(String[] args) {
        char a = 'p';
        char b = '9';
        char c = ' ';
        
        // Check if 'a' is a letter
        boolean isLetter = Character.isLetter(a);
        System.out.println("Is '" + a + "' a letter? " + isLetter);
        
        // Check if 'b' is a digit
        boolean isDigit = Character.isDigit(b);
        System.out.println("Is '" + b + "' a digit? " + isDigit);
        
        // Check if 'c' is a whitespace
        boolean isWhitespace = Character.isWhitespace(c);
        System.out.println("Is 'c' a whitespace? " + isWhitespace);
        
        // Check if 'a' is a letter or digit
        boolean isLetterOrDigit = Character.isLetterOrDigit(a);
        System.out.println("Is '" + a + "' a letter or digit? " + isLetterOrDigit);
        
        // Check if 'b' is a letter or digit
        isLetterOrDigit = Character.isLetterOrDigit(b);
        System.out.println("Is '" + b + "' a letter or digit? " + isLetterOrDigit);
        
        // Check if 'c' is a letter or digit
        isLetterOrDigit = Character.isLetterOrDigit(c);
        System.out.println("Is 'c' a letter or digit? " + isLetterOrDigit);
        
        // Checking if 'a' is in uppercase 
        boolean isUpperCase = Character.isUpperCase(a);
        System.out.println("Is '" + a + "' in uppercase? " + isUpperCase);

        // Checking if 'a' is in lowercase
        boolean isLowerCase = Character.isLowerCase(a);
        System.out.println("Is '" + a + "' in lowercase? " + isLowerCase);

        // Converting 'a' to uppercase
        char upperCaseA = Character.toUpperCase(a);
        System.out.println("Uppercase of '" + a + "': " + upperCaseA);

        // Converting 'a' to lowercase
        char lowerCaseA = Character.toLowerCase(a);
        System.out.println("Lowercase of '" + a + "': " + lowerCaseA);
    }
}



